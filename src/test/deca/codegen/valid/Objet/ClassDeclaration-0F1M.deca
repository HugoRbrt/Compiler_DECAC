// Description:
//      Class with no field but a method
//
// Result:
//      3.1400e+01 is the opposite of -3.1400e+01
//
// History:
//      created on 17/1/2022

class Q {
    float abs(float x) {
        if (x < 0.0) {
            return -x;
	}
    }
}

{
    Q q = new Q();
    int x = 3.14;
    float pos = q.abs(x);
    float neg = -q.abs(x);
    println(pos, "is the opposite of ", neg);
}
